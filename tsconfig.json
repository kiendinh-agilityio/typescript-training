{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "lib": ["es6", "dom"],

    /* Alias */
    "paths": {
      "@/*": ["./src/scripts/*"]
    }
  },
  "include": ["**/*.ts"]
}
